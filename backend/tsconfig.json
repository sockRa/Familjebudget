{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "..",
        "declaration": true,
        "types": [
            "node"
        ],
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        },
        "baseUrl": "."
    },
    "include": [
        "src/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}